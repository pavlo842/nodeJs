
<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">To come in</a></li>
            <li class="tab col s6"><a href="#register">Registration</a></li>
            </ul>
        </div>

        <div id="login" class="col s6 offset-s3">
            <h1>To come in Shop</h1>
            <form action="/login" method="POST">

                <div class="input-field">
                    <input id="email" type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="password" type="password" name="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <button class="btn btn-primary" type="submit">To come in</button>

            </form>
        </div>

        <div id="register" class="col s6 offset-s3">
            <h1>Create an account</h1>
            <form action="/login" method="POST">

                <div class="input-field">
                    <input id="remail" type="email" name="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" type="password" name="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" type="password" name="confirm" class="validate" required>
                    <label for="confirm">The password again</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <button class="btn btn-primary" type="submit">Sign up</button>

            </form>
        </div>
    </div>
</div>
